{
    "name": "pierredup/toggler",
    "description": "Simple feature toggle library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Pierre du Plessis",
            "email": "pdples@gmail.com"
        }
    ],
    "autoload": {
        "files": ["src/functions.php"],
        "psr-4": {
            "Toggler\\" : "./src"
        }
    },
    "require": {
        "php": ">=5.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8"
    },
    "suggest": {
        "twig/twig": "To use the twig extension",
        "symfony/yaml": "To pass yml files to the config",
        "symfony/symfony": "To enable Symfony integration",
        "symfony/expression-language": "To use expressions for conditions"
    }
}
