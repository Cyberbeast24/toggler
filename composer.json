{
    "name": "solidworx/toggler",
    "description": "Feature toggle library",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "feature toggle",
        "feature switch"
    ],
    "authors": [
        {
            "name": "Pierre du Plessis",
            "email": "pdples@gmail.com"
        }
    ],
    "autoload": {
        "files": ["src/functions.php"],
        "psr-4": {
            "SolidWorx\\Toggler\\" : "./src"
        }
    },
    "require": {
        "php": ">=5.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "twig/twig": "^1.28",
        "symfony/yaml": "^3.2",
        "symfony/expression-language": "^3.2",
        "symfony/framework-bundle": "^3.2",
        "symfony/phpunit-bridge": "^3.2"
    },
    "suggest": {
        "twig/twig": "To use the twig extension",
        "symfony/yaml": "To pass yml files to the config",
        "symfony/symfony": "To enable Symfony integration",
        "symfony/expression-language": "To use expressions for conditions"
    }
}
